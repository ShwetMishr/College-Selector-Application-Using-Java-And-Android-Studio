<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.College_Selector_App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--  this is for enabling transition-->
        <item name="android:windowActivityTransitions">true</item>
        <!--  this is for enter and exit transition transition-->
        <item name="android:windowEnterTransition">@transition/trans_anim</item>
        <item name="android:windowExitTransition">@transition/trans_anim</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.College_Selector_App" parent="Base.Theme.College_Selector_App" />

    <style name="Theme.College_Selector_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.College_Selector_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.College_Selector_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>